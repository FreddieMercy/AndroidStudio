<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/part3_listViewItem_Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/part3_listViewitem_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/part3_listViewItem_Item"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="descriptions" />

    <TextView
        android:id="@+id/part3_listViewitem_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/part3_listViewItem_Item"
        android:layout_toRightOf="@+id/part3_listViewItem_Item"
        android:padding="10dp"
        android:text="price"
        android:textSize="24sp" />
</RelativeLayout>
